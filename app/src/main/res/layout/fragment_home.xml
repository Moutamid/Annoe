<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textColor="@color/font"
                android:text="Optimization"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_bold"
                android:layout_margin="15sp" />

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting"
                android:background="@color/background"
                android:layout_marginEnd="12sp" />

            <ImageButton
                android:id="@+id/quest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/question"
                android:background="@color/background"
                android:layout_marginEnd="15sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/font"
            android:text="Profilers"
            android:fontFamily="@font/sf_pro_bold"
            android:layout_margin="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="9sp"
                    app:cardBackgroundColor="@color/yellow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:src="@drawable/bi_cpu" />

                        <TextView
                            android:id="@+id/cpu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="24%"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:fontFamily="@font/sf_pro_bold"
                            android:textColor="@color/cpu" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:gravity="center"
                    android:textColor="@color/font"
                    android:fontFamily="@font/sf_pro"
                    android:textSize="16sp"
                    android:layout_marginTop="6sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="7sp"
                android:layout_marginEnd="7sp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="9sp"
                    app:cardBackgroundColor="@color/orange">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:src="@drawable/union" />

                        <TextView
                            android:id="@+id/memory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="24.3MB"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:fontFamily="@font/sf_pro_bold"
                            android:textColor="@color/memory" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memory"
                    android:gravity="center"
                    android:textColor="@color/font"
                    android:fontFamily="@font/sf_pro"
                    android:textSize="16sp"
                    android:layout_marginTop="6sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_weight="1">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="9sp"
                    app:cardBackgroundColor="@color/green">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24sp"
                            android:layout_height="24sp"
                            android:src="@drawable/battery" />

                        <TextView
                            android:id="@+id/battery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="24%"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:fontFamily="@font/sf_pro_bold"
                            android:textColor="@color/battery" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Battery"
                    android:gravity="center"
                    android:textColor="@color/font"
                    android:fontFamily="@font/sf_pro"
                    android:textSize="16sp"
                    android:layout_marginTop="6sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/switchStress"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:layout_marginTop="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginBottom="15sp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:layout_marginEnd="7sp"
                android:src="@drawable/switch_off" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/retrain"
                android:layout_width="0dp"
                app:cardCornerRadius="26sp"
                android:layout_marginTop="15sp"
                android:layout_marginStart="7sp"
                android:layout_marginBottom="15sp"
                android:layout_marginEnd="15sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/purple"
                android:layout_height="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="12sp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/play" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Re-train"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginStart="12sp"
                        android:textColor="@color/font"
                        android:fontFamily="@font/sf_pro_bold"
                        android:textSize="24sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/font"
            android:text="Shell Output"
            android:fontFamily="@font/sf_pro_bold"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginTop="15sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/back"
                    android:fontFamily="@font/sf_pro"
                    android:lineHeight="18sp"
                    android:padding="12sp"
                    android:text=""
                    android:textColor="@color/font" />

            </RelativeLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>